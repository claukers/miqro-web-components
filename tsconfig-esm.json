{
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "es2022",
    "moduleResolution": "Node",
    "target": "es2021",
    "outDir": "./dist/esm",
    "removeComments": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "test/",
  ]
}
